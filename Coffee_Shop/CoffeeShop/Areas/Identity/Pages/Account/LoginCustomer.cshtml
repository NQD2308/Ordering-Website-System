@page
@model LoginCustomerModel  

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- <link
        href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&family=Playfair+Display+SC&display=swap"
        rel="stylesheet"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

    <link rel="stylesheet" href="~/css/login.css">
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="form" style="margin-top: 10%;">
                    <h2>Login</h2>
                    <form id="account" method="post">
                        <table>
                            <tr>
                                <td>Username</td>
                                <th>
                                    <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </th>
                            </tr>
                            <tr>
                                <td>Password</td>
                                <th>
                                    <input asp-for="Input.Password" class="form-control"/>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </th>
                            </tr>
                            <tr>
                                <td></td>
                                <th class="forgotpass"><a href="#">Forgot password</a></th>
                            </tr>
                        </table>
                        <div class="btnLogin">
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

