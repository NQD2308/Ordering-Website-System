@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- <link
        href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&family=Playfair+Display+SC&display=swap"
        rel="stylesheet"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

    <link rel="stylesheet" href="~/css/signup.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="form" style="margin-top: 10%;">
                    <h2>Login</h2>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <table>
                            <tr>
                                <td>Username</td>
                                <th>
                                    <input asp-for="Input.FullName" class="form-control" />
                                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                </th>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <th>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </th>
                            </tr>
                            <tr>
                                <tr>
                                <td>Phone number</td>
                                <th>
                                    <input asp-for="Input.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </th>
                            </tr>
                            <tr>
                            <tr>
                                <td>Address</td>
                                <th>
                                    <input asp-for="Input.Address" class="form-control" />
                                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                                </th>
                            </tr>
                            <tr>
                                <td>Password</td>
                                <th>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </th>
                            </tr>
                            <tr>
                                <td>Confirm password</td>
                                <th>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </th>
                            </tr>
                        </table>
                        <div class="btnLogin">
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary"
                                    style="border-radius: 12px; background-color: rgb(86,55,39); color: rgba(224, 176, 120, 0.7); 
                                            border: none; margin-right: 0; padding: 2px 0; font-size: 26px">
                                Sign Up
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

