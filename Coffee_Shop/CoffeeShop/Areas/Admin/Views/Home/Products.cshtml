@model List<CoffeeShop.Models.Product>

<style>
    
    body {
        background-image: none;
        background-color: #e29a3d;
        font-size: 16px;
    }

    /*=============== Fill ===============*/

    .fill-category{
        display: flex;
        float: left;
        margin: 20px 60px;
    }

    .fill-category select{
        margin-left: 10px;
        border-radius: 8px;
        padding: 2px 6px;
    }

    /*=============== Form ===============*/

    .table-of-list {
        width: 1024px;
        margin-bottom: 30px;
    }

        .table-list-products td, th,
        .table-of-list tbody a {
            font-size: 16px;
        }

        .table-of-list thead th {
            text-align: center;
        }

    /*=============== Pagination ===============*/

    nav.pagination {
        background-color: #e29a3d;
        margin-bottom: 100px;
    }

    nav.pagination ul.pagination{
        display:flex;
        float: right;
    }

    nav.pagination ul li {
        list-style-type: none;
        margin: 0 20px;
    }

    nav.pagination ul li a{
        text-decoration: none;
        list-style-type: none;
        font-size: 16px;
    }
</style>


<div style="display:block; width:1024px">
    <div style="margin: 10px 40px; display:flex; justify-content: space-between">
        <h2> Table list products</h2>
        <a style="font-size: 16px" class="btn" asp-action="CreateProduct">Create new product</a>
    </div>

   

    <form asp-action="FillProductById" asp-controller="Home" method="post" style="margin-left: 30px; background: none;">
        <div class="fill-category">
            <p>Category</p>

            @(Html.DropDownList("GenreId", @ViewBag.GenreId,
                                                     "--Choose category --",
                new { @class = "form-control",  onchange = "this.form.submit()" }))

            @*<select name="GenreId" onchange="this.form.submit()"  asp-items="@ViewBag.GenreId">
                
            </select>*@

           @* <select name="GenreId"  asp-items="@ViewBag.GenreId"  onchange="this.form.submit()">

            </select>*@
            @*<button type="submit"></button>*@
        </div>

        <table class="table-of-list">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Discription</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string price = @item.Price.ToString("0.000");
                    <tr class="table-list-products">
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@price đ</td>
                        <td>@item.Describe</td>
                        <td><img src="~/img/@item.ImgPath" style="width:70px; height:100px; border-radius: 8px" /></td>
                        <td>
                            <a asp-action="EditProduct" asp-route-id="@item.ProductId">Edit</a> ||
                            <a asp-action="DeleteProduct" asp-route-id="@item.ProductId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav class="pagination" aria-label="...">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link asp-area=" Admin" asp-controller="Home" asp-action="Products" asp-route-page="@(ViewBag.CurrentPage - 1)"><<</a>
                </li>
                @for (int page1 = 1; page1 <= ViewBag.TotalPages; page1++)
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="Admin" asp-controller="Home" asp-action="Products" asp-route-page="@page1">@page1</a>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link asp-controller=" Home" asp-action="Products" asp-route-page="@(ViewBag.CurrentPage + 1)">>></a>
                </li>
            </ul>
        </nav>
    </form>

</div>
